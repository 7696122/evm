#!/bin/bash

if [ -z "$EVM_HOME" ] ; then
  EVM_HOME=$HOME/.evm
fi

if [[ $1 == "update" ]]; then
  cd $EVM_HOME && git pull
elif [[ $1 == "list" ]]; then
  for i in $EVM_HOME/scripts/*; do
    NAME=$(basename $i)
    if [[ $NAME == $EVM_EMACS ]]; then
      echo "*" $NAME
    else
      echo $NAME
    fi
  done
elif [[ $1 == "install" ]]; then
  echo "install"
elif [[ $1 == "uninstall" ]]; then
  echo "uninstall"
elif [[ $1 == "use" ]]; then
  echo "use"
elif [[ $1 == "set" ]]; then
  echo "set"
  if [[ $2 == "list" ]]; then
    echo "list"
  elif [[ $2 == "create" ]]; then
    echo "create"
  elif [[ $2 == "use" ]]; then
    echo "use"
  elif [[ $2 == "remove" ]]; then
    echo "remove"
  fi
fi
